<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Campground</title>
</head>
<body>
    <h1>Edit Campground</h1>
    <!-- as html don't support put, we need to override it with PUT at app.js-->
    <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <div>
            <label for="">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %>">
        </div>
        <div>
            <label for="">Location</label>
            <input type="tetx" id="location" name="campground[location]" value="<%= campground.location %>">
        </div>
        <button>Update Campground</button>
        <button><a href="/campgrounds">Back To Index Page</a></button>
    </form>
</body>
</html>