<% layout('layout/boilerplate') %>

<h1>REGISTER</h1>
<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input class="form-control" type="text" id="username" name="username"
            required>
        <!-- TODO: invalid feedback pop up for duplicated username and emails -->
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" id="email" name="email"
            required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input class="form-control" type="password" id="password" name="password"
            required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <button class="btn btn-success btn-lg">Register</button>
    <button class="btn btn-warning btn-lg"><a href="/login" style="text-decoration: none; color: white">Already User? Back to login</a> </button>
</form>