<% layout('layout/boilerplate') %>

<link rel="stylesheet" href="/css/app.css">

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow text-white" style="background: transparent; border: none; width: 25rem;">
        <h3 class="text-center card-title animate-fadeInUp" style="animation-delay: 0.1s;">Register</h3>
        <div class="card-body">
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label text-center animate-fadeInUp" style="animation-delay: 0.3s;">Username</label>
                    <input class="form-control" type="text" id="username" name="username"
                        required>
                    <!-- TODO: invalid feedback pop up for duplicated username and emails -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label text-center animate-fadeInUp" style="animation-delay: 0.5s;">Email</label>
                    <input class="form-control" type="email" id="email" name="email"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            
                <div class="mb-3">
                    <label class="form-label text-center animate-fadeInUp" style="animation-delay: 0.7s;">Password</label>
                    <input class="form-control" type="password" id="password" name="password"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="d-flex justify-content-between animate-fadeInUp" style="animation-delay: 0.9s;">
                    <button class="btn btn-outline-success btn-lg">Register</button>
                    <a class="btn btn-outline-warning btn-lg" href="/login">Back to login</a>
                </div>
        </div>
    </div>
</div>
</form>
