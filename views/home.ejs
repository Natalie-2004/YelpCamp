<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- use the same ver. of bootstrap for both css and js -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/app.css">
</head>

<body class="d-flex h-100 text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column justify-content-center">
        <div class="mb-auto mt-auto">
            <% if (currUser) { %>
                <h1>
                    <h1 class="animate-fadeInUp text-4xl">Hi, <%= currUser.username%>, Welcome Back!</h1>
                    <subheading class="animate-fadeInUp" style="animation-delay: 0.3s;">Find the perfect spot. Rate your favorite camps. Share your adventure.</subheading>
                    <div class="mt-3">
                        <button type="button" class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.5s;"><a href="/campgrounds"
                            style="text-decoration: none; color: inherit">Campgrounds</a></button>
                        <button type="button" class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.7s;"><a href="/campgrounds/new"
                                style="text-decoration: none; color: inherit">Create Campgrounds</a></button>
                        <button type="button" class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.9s;"><a href="/logout"
                                style="text-decoration: none; color: inherit">Log Out</a></button>
                    </div>
                </h1>
                <% } else { %>
                    <h1 class="animate-fadeInUp text-4xl">Welcome To YELP CAMP!</h1>
                    <subheading class="animate-fadeInUp" style="animation-delay: 0.3s;">Find the perfect spot. Rate your favorite camps. Share your adventure.</subheading>
                    <div class="div mt-3">
                        <button class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.5s;"><a href="/register" style="text-decoration: none; color: inherit">Quick Register</a></button>
                        <button class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.7s;"><a href="/login" style="text-decoration: none; color: inherit">Log In</a></button>
                        <button class="btn btn-outline-primary btn-lg animate-fadeInUp mx-3" style="animation-delay: 0.9s;"><a href="/campgrounds" style="text-decoration: none; color: inherit">Just Look Around</a></button>
                    </div>
                    <% }%>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
</body>

</html>